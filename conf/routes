# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home pagen.g
GET     /                           controllers.Application.start()
GET     /events                     controllers.Application.events()
GET     /restaurants                controllers.Application.filterQuatDatabase()
POST    /restaurants                controllers.Application.filterQuatDatabase()
GET     /filterC                    controllers.Application.filterCategor()
GET		/home						controllers.Application.goHome()
GET		/klaus					controllers.Application.calcLongLad(name:String)
GET		/thisEvent					controllers.Application.selectedEvent()
GET     /test                       controllers.Application.matchRestEvent()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
